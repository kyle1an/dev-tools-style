:root {
    --monospace-font: SF Mono, monospace, ui-monospace;
    --xcode: XcodeDigits, SF Mono;
    --compact: SF Compact Text, SF Text;
}

.monospace, .source-code {
    font-family: var(--monospace-font) !important;
}

