    font-family: var(--monospace-font) !important;
}

::shadow .monospace, ::shadow .source-code {
    font-family: var(--monospace-font) !important;
}

.parent.search-result.expanded + ol, .call-frame-title-text {
    font-family: var(--monospace-font) !important;
}

.platform-linux, .platform-mac, .platform-windows {
    font-family: var(--compact) !important;
}

platform-windows {
    font-family: var(--compact) !important;
}

.tabbed-pane-header-tab-title {
